{
    "manifest_version": 2,
    "name": "CVS Auto Couponer",
    "description": "Automatically add all CVS coupons to your ExtraCare card when visiting the CVS loyalty member website. (https://www.cvs.com/loyalty-deals)",
    "version": "1.0",
    "icons": {
        "16": "/images/icon16.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "/images/icon16-2.png",
            "48": "/images/icon48-2.png",
            "128": "/images/icon128-2.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://www.cvs.com/loyalty-deals"],
        "js": ["content.js"]
    }]
}
